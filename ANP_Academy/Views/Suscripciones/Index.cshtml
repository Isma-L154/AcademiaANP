@model IEnumerable<ANP_Academy.DAL.Models.Suscripcion>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<link rel="stylesheet" href="~/css/Suscripciones/Suscripciones.css" asp-append-version="true" />

<div class="container mt-4">
    <h1 class="text-center">Suscripciones</h1>
    <div class="row">
        <div class="col-12">
            <div class="description">
                <h3>Descripción General</h3>
                <p>Aquí puedes encontrar diferentes planes de suscripción que ofrecemos. 
                    Acceso completo a material exclusivo, actualizaciones regulares. Posiblidad de cancelar en cualquier momento sin compromisos a largo plazo. Selecciona el plan que mejor se adapte a tus necesidades y disfruta de nuestros servicios exclusivos.</p>
            </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 d-flex align-items-stretch">
                <div class="card mb-4 shadow-sm w-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                        <p class="card-text">Precio: <span class="font-weight-bold">@Html.DisplayFor(modelItem => item.Precio) CRC</span></p>
                        <div class="btn-center mt-auto">
                            <button class="btn btn-danger btn-lg" onclick="showModal('@item.IdSuscripcion')">Adquirir Plan</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para adquisición de plan -->
<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adjuntar Comprobante</h5>
                <button type="button" class="close" aria-label="Close" onclick="closeModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="comprobante">Selecciona tu comprobante:</label>
                        <input type="file" id="comprobante" name="comprobante" class="form-control" accept="image/*, .pdf">
                    </div>
                    <button type="submit" class="btn btn-primary">Adjuntar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Admin/GestionPlanes.js"></script>

