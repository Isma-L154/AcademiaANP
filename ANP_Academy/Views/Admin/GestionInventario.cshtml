﻿@model IEnumerable<ANP_Academy.DAL.Models.Inventario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Inventario</h2>

<p>
    <a href="@Url.Action("CrearInventario")">Crear Nuevo Inventario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th>Categoría</th>
            <th>Cantidad</th>
            <th>Unidad</th>
            <th>Precio</th>
            <th>Proveedor</th>
            <th>Fecha Pedido</th>
            <th>Fecha Recepción</th>
            <th>Fecha Caducidad</th>
            <th>Estado</th>
            <th>Ubicación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descripcion</td>
                <td>@item.IdCategoriaNavigation?.Nombre</td>
                <td>@item.Cantidad</td>
                <td>@item.Unidad</td>
                <td>@item.Precio</td>
                <td>@item.IdProveedorNavigation?.Nombre</td>
                <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaRecepcion.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaCaducidad?.ToString("dd/MM/yyyy")</td>
                <td>@(item.Estado.HasValue && item.Estado.Value ? "Disponible" : "No Disponible")</td>
                <td>@item.IdUbicacionNavigation?.Nombre</td>
                <td>
                    <a href="@Url.Action("EditarInventario", new { id = item.Id })">Editar</a> |
                    <form action="@Url.Action("EliminarInventario", new { id = item.Id })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-link" onclick="return confirm('¿Estás seguro de que deseas eliminar este inventario?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
