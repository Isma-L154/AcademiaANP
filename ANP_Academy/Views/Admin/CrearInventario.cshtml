@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Administrador/CrearUsuario.css" asp-append-version="true" />

<main>
    <section id="gestion">
        <h2 style="text-align: center;">Crear Inventario</h2>
        <div class="formulario-edicion">
            <form action="@Url.Action("GestionInventario", "Admin")" method="post">
                <div class="campo-formulario">
                    <label for="codigo">Código:</label>
                    <input type="text" id="codigo" name="codigo" required />
                </div>
                <div class="campo-formulario">
                    <label for="descripcion">Descripción:</label>
                    <input type="text" id="descripcion" name="descripcion" required />
                </div>
                <div class="campo-formulario">
                    <label for="categoria">Categoría:</label>
                    <select id="categoria" name="categoria" required>
                        <option value="">Selecciona una categoría</option>
                        <option value="Carnes">Carnes</option>
                        <option value="Vegetales">Vegetales</option>
                        <option value="Especias">Especias</option>
                        <option value="Equipamiento">Equipamiento</option>
                        <option value="Utensilios">Utensilios</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>
                <div class="campo-formulario">
                    <label for="cantidad">Cantidad en Stock:</label>
                    <input type="number" id="cantidad" name="cantidad" required />
                </div>
                <div class="campo-formulario">
                    <label for="unidad_medida">Unidad de Medida:</label>
                    <select id="unidad_medida" name="unidad_medida" required>
                        <option value="">Selecciona una unidad</option>
                        <option value="Kilogramos">Kilogramos</option>
                        <option value="Gramos">Gramos</option>
                        <option value="Litros">Litros</option>
                        <option value="Unidades">Unidades</option>
                    </select>
                </div>
                <div class="campo-formulario">
                    <label for="precio_unidad">Precio por Unidad:</label>
                    <input type="number" id="precio_unidad" name="precio_unidad" required />
                </div>
                <div class="campo-formulario">
                    <label for="proveedor">Proveedor:</label>
                    <input type="text" id="proveedor" name="proveedor" required />
                </div>
                <div class="campo-formulario">
                    <label for="fecha_pedido">Fecha de Pedido:</label>
                    <input type="date" id="fecha_pedido" name="fecha_pedido" required />
                </div>
                <div class="campo-formulario">
                    <label for="fecha_recepcion">Fecha de Recepción:</label>
                    <input type="date" id="fecha_recepcion" name="fecha_recepcion" required />
                </div>
                <div class="campo-formulario">
                    <label for="fecha_caducidad">Fecha de Caducidad:</label>
                    <input type="date" id="fecha_caducidad" name="fecha_caducidad" required />
                </div>
                <div class="campo-formulario">
                    <label for="estado">Estado:</label>
                    <select id="estado" name="estado" required>
                        <option value="">Selecciona un estado</option>
                        <option value="Disponible">Disponible</option>
                        <option value="Bajo en stock">Bajo en stock</option>
                        <option value="En pedido">En pedido</option>
                        <option value="Descontinuado">Descontinuado</option>
                    </select>
                </div>
                <div class="campo-formulario">
                    <label for="ubicacion">Ubicación:</label>
                    <input type="text" id="ubicacion" name="ubicacion" required />
                </div>
                <div class="botones-formulario">
                    <a href="@Url.Action("GestionInventario", "Admin")" class="boton-atras">Atrás</a>
                    <button type="submit" class="boton-activar">Crear</button>
                </div>
            </form>
        </div>
    </section>
</main>

