@model IEnumerable<ANP_Academy.DAL.Models.Suscripcion>

@{
    ViewData["Title"] = "GestionPlanes";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/Administrador/GestionPlanes.css" asp-append-version="true" />
<script src="https://kit.fontawesome.com/a076d05399.js"></script>

<div class="container mt-4">
    <h1 class="text-center">Gestionar Planes</h1>
    <p class="text-center">
        <a asp-action="CreatePlanes" class="btn btn-primary btn-lg mt-3">Crear Nueva Suscripción</a>
    </p>

    <div class="row">
        <div class="col-12">
            <div class="description">
                <h2>Descripción General</h2>
                <p>Aquí puedes encontrar diferentes planes de suscripción que ofrecemos. Cada plan está diseñado para proporcionar diferentes niveles de acceso y beneficios. Selecciona el plan que mejor se adapte a tus necesidades y disfruta de nuestros servicios exclusivos.</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                <p class="card-text">Precio: <span class="font-weight-bold">@Html.DisplayFor(modelItem => item.Precio) CRC</span></p>
                                <div class="d-flex justify-content-between align-items-center mt-4">
                                    <div class="btn-group">
                                        <a asp-action="EditPlanes" asp-route-id="@item.IdSuscripcion" class="btn btn-sm btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DetailsPlanes" asp-route-id="@item.IdSuscripcion" class="btn btn-sm btn-outline-secondary" title="Detalles">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" title="Eliminar" onclick="confirmDelete('@item.IdSuscripcion')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                    <button class="btn btn-sm btn-success" onclick="showModal('@item.IdSuscripcion')">Adquirir Plan</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Ventana modal para confirmación de eliminación -->
<div id="confirmDeleteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar esta suscripción?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="DeletePlanes">
                    <input type="hidden" id="deleteSuscripcionId" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Ventana modal para adjuntar comprobante -->
<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adjuntar Comprobante</h5>
                <button type="button" class="close" aria-label="Close" onclick="closeModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="comprobante">Selecciona tu comprobante:</label>
                        <input type="file" id="comprobante" name="comprobante" class="form-control" accept="image/*, .pdf">
                    </div>
                    <button type="submit" class="btn btn-success">Adjuntar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script src="~/js/Admin/GestionPlanes.js"></script>
