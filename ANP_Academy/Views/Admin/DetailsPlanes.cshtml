@model ANP_Academy.DAL.Models.Suscripcion

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<link rel="stylesheet" href="~/css/Administrador/DetailsPlanes.css" asp-append-version="true" />


<div class="container mt-4">
    <h1 class="text-center">Detalles de la Suscripción</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                    <p class="card-text">Precio: <span class="font-weight-bold">@Html.DisplayFor(model => model.Precio) CRC</span></p>
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="btn-group">
                            <a asp-action="EditPlanes" asp-route-id="@Model.IdSuscripcion" class="btn btn-sm btn-outline-secondary" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="GestionPlanes" class="btn btn-sm btn-outline-secondary" title="Volver a la Lista">
                                <i class="fas fa-list"></i>
                            </a>
                        </div>
                        <button class="btn btn-sm btn-success" onclick="showModal('@Model.IdSuscripcion')">Adquirir Plan</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ventana modal para adjuntar comprobante -->
<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adjuntar Comprobante</h5>
                <button type="button" class="close" aria-label="Close" onclick="closeModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="comprobante">Selecciona tu comprobante:</label>
                        <input type="file" id="comprobante" name="comprobante" class="form-control" accept="image/*, .pdf">
                    </div>
                    <button type="submit" class="btn btn-primary">Adjuntar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>


<script src="~/js/Admin/GestionPlanes.js"></script>