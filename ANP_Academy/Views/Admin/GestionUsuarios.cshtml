@model IEnumerable<ANP_Academy.DAL.Models.Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Administrador/GestionUsuarios.css" asp-append-version="true" />

<main>
    <section id="gestion">
        <h2 style="text-align: center;">Gestión de usuarios</h2>
        <div class="filtro-y-crear">
            <div class="filtro">
                <form>
                    <select name="filtro" aria-label="Buscar por" class="filtro-dropdown">
                        <option value="" disabled selected>Buscar por...</option>
                        <option value="identificador">Identificador</option>
                        <option value="nombre">Nombre</option>
                        <option value="correo">Correo Electrónico</option>
                    </select>
                    <input type="text" name="valor" aria-label="Valor de búsqueda" placeholder="Escribe aquí...">
                    <button type="submit" class="boton-buscar"><i class="fas fa-search"></i></button>
                </form>
            </div>
            <div class="crear-usuario">
                <a href="@Url.Action("CrearUsuario", "Admin")" class="boton-crear">Crear usuario</a>
            </div>
        </div>
        <div class="tabla">
            <table>
                <thead>
                    <tr>
                        <th>Identificador</th>
                        <th>Nombre</th>
                        <th>Correo electrónico</th>
                        <th>Teléfono</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Id</td>
                            <td>@usuario.Nombre @usuario.PrimApellido @usuario.SegApellido</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.PhoneNumber</td>
                            <td> <!-- Aquí puedes agregar la lógica para mostrar el rol del usuario si lo tienes disponible --> </td>
                            <td>@(usuario.Activo == true ? "Activo" : "Inactivo")</td>
                            <td>
                                <a href="@Url.Action("EditarUsuario", "Admin", new { id = usuario.Id })" class="boton-editar">Editar</a>
                                @if (usuario.Activo == true)
                                {
                                    <form asp-action="DesactivarUsuario" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@usuario.Id" />
                                        <button type="submit" class="boton-desactivar" onclick="return confirm('¿Estás seguro de que deseas desactivar este usuario?');">Desactivar</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="ActivarUsuario" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@usuario.Id" />
                                        <button type="submit" class="boton-activar" onclick="return confirm('¿Estás seguro de que deseas activar este usuario?');">Activar</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>
