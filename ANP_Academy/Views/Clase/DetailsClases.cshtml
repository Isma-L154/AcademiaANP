@model ANP_Academy.DAL.Models.Clase

@{
    ViewData["Title"] = "Detalles de la Clase";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">@Model.Titulo</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="@Url.Action("GetImage", "Clase", new { id = Model.IdClase })" alt="Imagen de la clase" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
                    </div>
                    <dl class="row">
                        <dt class="col-sm-3">Título</dt>
                        <dd class="col-sm-9">@Model.Titulo</dd>

                        <dt class="col-sm-3">Descripción</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>

                        <dt class="col-sm-3">URL del Video</dt>
                        <dd class="col-sm-9">
                            <a href="@Model.URLVideo" target="_blank">@Model.URLVideo</a>
                        </dd>
                    </dl>
                    <div class="mt-3">
                        <a asp-action="GestionClases" class="btn btn-secondary">Volver a la lista</a>
                        <a asp-action="EditClases" asp-route-id="@Model.IdClase" class="btn btn-primary">Editar</a>
                        <form asp-action="DeleteClases" asp-route-id="@Model.IdClase" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro que desea eliminar esta clase?');">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
