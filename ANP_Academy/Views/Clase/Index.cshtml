@model IEnumerable<ANP_Academy.DAL.Models.Clase>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clases de Parrilla</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Clase/Clase.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4 mb-4">Clases</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var clase in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@Url.Action("GetImage", "Clase", new { id = clase.IdClase })" class="card-img-top" alt="Imagen de la clase">
                        <div class="card-body">
                            <h5 class="card-title">@clase.Titulo</h5>
                            <p class="card-text">@clase.Descripcion</p>
                            <a href="@clase.URLVideo" class="btn btn-primary" target="_blank">Ver Clase</a>
                            <div class="progress mt-3">
                                <div class="progress-bar" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
