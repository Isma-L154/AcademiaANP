@model ANP_Academy.DAL.Models.Receta

@{
    ViewData["Title"] = "Eliminar Receta";
}

<h1>Eliminar Receta</h1>

<h3>¿Está seguro que desea eliminar esta receta?</h3>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Action("GetImage", "Recetas", new { id = Model.IdReceta })" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
        </dd>
        <dt class="col-sm-2">
            URL del Video
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.URLVideo" target="_blank">@Model.URLVideo</a>
        </dd>
    </dl>
</div>

<form asp-action="DeleteRecetasConfirmed" method="post">
    <input type="hidden" asp-for="IdReceta" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="GestionRecetas" class="btn btn-secondary">Volver a la lista</a>
</form>
