@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Esta ya no se usa *@

<link rel="stylesheet" href="~/css/Administrador/EditarUsuario.css" asp-append-version="true" />

<main>
    <section id="gestion">
        <h2 style="text-align: center;">Editar Perfil</h2>
        <div class="formulario-edicion">
            <form action="@Url.Action("Index", "Home")" method="post">
                <div class="campo-formulario">
                    <label for="identificador">Identificador:</label>
                    <input type="text" id="identificador" name="identificador" placeholder="1" readonly />
                </div>
                <div class="campo-formulario">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Usuario1" />
                </div>
                <div class="campo-formulario">
                    <label for="correo">Correo electrónico:</label>
                    <input type="email" id="correo" name="correo" placeholder="usuario1@gmail.com" readonly />
                </div>
                <div class="campo-formulario">
                    <label for="telefono">Teléfono:</label>
                    <input type="text" id="telefono" name="telefono" placeholder="8451-7845	" />
                </div>
                <div class="botones-formulario">
                    <button type="submit" class="boton-atras">Atrás</button>
                    <button type="submit" class="boton-verde">Actualizar</button>
                </div>
            </form>
        </div>
    </section>
</main>

