@model ANP_Academy.DAL.Models.Usuario

<link rel="stylesheet" href="~/css/Usuario/Edit.css" asp-append-version="true" />

<h1 class="center-text">Editar Perfil</h1>



<form asp-action="Edit" method="post" class="profile-form">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PrimApellido">Primer Apellido</label>
        <input asp-for="PrimApellido" class="form-control" />
        <span asp-validation-for="PrimApellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SegApellido">Segundo Apellido</label>
        <input asp-for="SegApellido" class="form-control" />
        <span asp-validation-for="SegApellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Teléfono</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
